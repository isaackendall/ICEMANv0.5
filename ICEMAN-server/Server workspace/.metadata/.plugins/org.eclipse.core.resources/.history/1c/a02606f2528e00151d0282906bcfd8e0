<dom-module id="front-page">
	<!-- This is our header div.Our paper header panel is wrapped in this and a card below it. 
 	There is a div between the card and the Header to make it look larger  -->
 	<template>
 		<div id='parent'>
  			<paper-header-panel class="flex" mode="seamed">
    			<paper-toolbar>
      				<div>Header</div>
    			</paper-toolbar> 
 			</paper-header-panel>
			<div style="display: block; height: 260px; background: #3f51b5">
  				<paper-card style="display: block; margin: 0 auto; left:0; right:0; width:60%; position: absolute; z-index:999; margin-top:220px;" heading="Canvas Apps Creates Beatuiful, 
	   						Modern and Responsive Apps for the Web that Deliver a Consistent Experience Across Desktop, 
	   						Tablet and Mobile." elevation=3>
					<div> 
						<!-- Spacers in the content part -->
						<br>
						<br>
					</div>
					<div class="card-actions">
	   					<paper-button style="color:#008094">Discover Canvas</paper-button>
	 				</div>
				</paper-card>	  			
	  		</div>
	 	</div>
	 	 
	 	<div id="SubCardsDiv" class="clearer" style="margin:0 auto; background: #455A64; width:100%; height: 100%  ">
	 		 	   
			
			<anim-test-a></anim-test-a>

    	</div>
	</template>
	<script>
		Polymer({
		    is: 'front-page',
		    behaviors: [Polymer.NeonSharedElementAnimatableBehavior],
		    properties: {
		      animationConfig: {
		        value: function() {
		          return {
		            'entry': {
		              name: 'scale-up-animation',
		              node: this
		            },
		            'exit': [{
		              name: 'hero-animation',
		              id: 'hero',
		              fromPage: this
		            }, {
		              name: 'fade-out-animation',
		              node: this
		            }]
		          }
		        }
		      },
		      sharedElements: {
		        value: function() {
		          return {
		            'hero': this.$.parent
		          }
		        }
		      }
		    }
		  });
	  </script>
</dom-module>