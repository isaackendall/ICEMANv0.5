  <script>
    Polymer({
      is: 'pricing-tab',
      behaviors: [Polymer.NeonSharedElementAnimatableBehavior],
      properties: {
        animationConfig: {
          value: function() {
            return {
              'entry': [{
                name: 'hero-animation',
                id: 'hero',
                toPage: this
              }, {
                name: 'fade-in-animation',
                node: this
              }],
              'exit': {
                name: 'fade-out-animation',
                node: this
              }
            }
          }
        },
        sharedElements: {
          value: function() {
            return {
              'hero': this.$.header
            }
          }
        }
      }
    });
  </script>

