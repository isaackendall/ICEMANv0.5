<dom-module id="front-page">
	<!-- This is our header div.Our paper header panel is wrapped in this and a card below it. 
 	There is a div between the card and the Header to make it look larger  -->
 	<template>
 		<div id='parent' style="height:50%">
  			<paper-header-panel class="flex" mode="seamed" style="background : #03A9F4;">
    			<paper-toolbar style = "background : #0288D1">
      				<div>Canvas</div>
    			</paper-toolbar> 
  				  			
	  		</div>
 			</paper-header-panel> 			
			
	 	</div>
	 	
	 	<div id="SubCardsDiv" class="clearer" style="margin:0 auto; width:100%; height: 100%">
	 		 <div><paper-fab icon="settings-phone" title="settings-phone" style="position: relative;
			    float: right;
			    margin-right: 7%;
			    transform: translate(0px,-30px);"></paper-fab></div>
	 		 <paper-card style="display: block; margin: 0 auto; left:0; right:0; width:60%; z-index:999; transform: translate(0px,-100px)" heading="Canvas Creates Beatuiful and Responsive Web Apps For Desktop, Tablet and Mobile. Experience the Future of the Web" elevation=3>
					<div> 
						<!-- Spacers in the content part -->
						<br>
