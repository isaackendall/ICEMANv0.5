					</div>
					<div class="card-actions">
	   					<paper-button style="color:#008094">Discover Canvas</paper-button>
	 				</div>
				</paper-card>		   
				
			<anim-test-a></anim-test-a>

    	</div>
	</template>
	<script>
		Polymer({
		    is: 'front-page',
		    behaviors: [Polymer.NeonSharedElementAnimatableBehavior],
		    properties: {
		      animationConfig: {
		        value: function() {
		          return {
		            'entry': {
		              name: 'scale-up-animation',
		              node: this
		            },
		            'exit': [{
		              name: 'hero-animation',
		              id: 'hero',
		              fromPage: this
		            }, {
		              name: 'fade-out-animation',
		              node: this
		            }]
		          }
		        }
		      },
		      sharedElements: {
		        value: function() {
		          return {
		            'hero': this.$.parent
		          }
		        }
		      }
		    }
		  });
	  </script>
</dom-module>