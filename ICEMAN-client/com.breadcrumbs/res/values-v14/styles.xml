<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>

        <item name="android:textColorPrimary">@color/my_primary_text</item>
        <item name="android:textColorSecondary">@color/my_secondary_text</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorAccent">@color/accent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CodeFont" parent="@android:style/TextAppearance">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="CodeFont2" parent="@android:style/TextAppearance">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="DarkBackgroundFont" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>

