<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColorPrimary">@color/my_primary_text</item>
        <item name="android:textColorSecondary">@color/my_secondary_text</item>
        <item name="android:textColorHint">@color/my_divider</item>
        <item name="colorAccent">@color/accent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>
    <style name="HeaderFont" >
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/my_divider</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="CodeFont">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/my_divider</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="CodeFontWhite">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/my_divider</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="CodeFont2">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/accent</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/my_primary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CodeFontDevider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/accent</item>
        <item name="android:textColor">@color/my_divider</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DarkBackgroundFont">
        <item name="android:textColor">@color/my_primary_text</item>
        <item name="android:textColorHint">@color/my_divider</item>
        <item name="android:textColorSecondary">@color/my_secondary_text</item>
    </style>

</resources>

