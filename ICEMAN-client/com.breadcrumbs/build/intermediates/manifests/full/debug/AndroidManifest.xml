<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.breadcrumbs"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22" />

    <permission
        android:name="com.breadcrumbs.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="com.breadcrumbs.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="com.google.android.c2dm.permission.SEND" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <!-- Ensure that the map renders -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/test"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.breadcrumbs.client.Main"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- [START gcm_receiver] -->
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.breadcrumbs.GCM" />
            </intent-filter>
        </receiver>
        <!-- [END gcm_receiver] -->


        <!-- [START gcm_listener] -->
        <service
            android:name="com.breadcrumbs.GCM.BreadcrumbsGcmReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <!-- [END gcm_listener] -->


        <!-- [START instanceId_listener] -->
        <service
            android:name="com.breadcrumbs.GCM.BreadcrumbsInstanceIdListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <!-- [END instanceId_listener] -->
        <service
            android:name="com.breadcrumbs.GCM.RegistrationIntentService"
            android:exported="false" >
        </service>

        <activity
            android:name="com.breadcrumbs.client.TrailManager"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.breadcrumbs.client.BaseViewModel"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.breadcrumbs.client.CrumbViewer.CommentViewer"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.breadcrumbs.client.EditTrail"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name="com.breadcrumbs.client.ImageChooser.GridImageSelector" />
        <activity
            android:name="com.breadcrumbs.client.TrailActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name="com.breadcrumbs.client.ProfilePageViewer" />
        <activity
            android:name="com.breadcrumbs.client.SelectedEventViewerBase"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.breadcrumbs.client.ImageViewer"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
 <!-- hide keyboard by default -->
        </activity>
        <activity android:name="com.breadcrumbs.client.Camera.CameraCapture" >
        </activity>
        <activity
            android:name="com.breadcrumbs.client.BreadCrumbsImageSelector"
            android:screenOrientation="portrait" />
        <activity android:name="com.breadcrumbs.client.CrumbViewer.CrumbsHolder" />
        <activity
            android:name="com.breadcrumbs.client.tabs.SaveEventFragment"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.breadcrumbs.client.Maps.MapViewer"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name="com.breadcrumbs.client.tabs.SaveVideoActivity" >
        </activity>
        <activity
            android:name="com.breadcrumbs.client.Maps.MapViewController"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.breadcrumbs.client.ProfilePicChooser"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.breadcrumbs.client.OverflowNavigationDrawer"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.breadcrumbs.client.EditExistingTrail"
            android:screenOrientation="portrait" >
        </activity>

        <service android:name="com.breadcrumbs.Location.LocationService" />

        <!-- AIzaSyBmkUW1b2c3cXhz-Sw7cfWtK41Qz-0aaww -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCy82ucudMrzKRtUsF0S3v_DSVyNL5m9n8" />

        <provider
            android:name="com.google.android.gms.measurement.AppMeasurementContentProvider"
            android:authorities="com.google.android.gms.measurement.google_measurement_service"
            android:exported="false" />

        <receiver
            android:name="com.google.android.gms.measurement.AppMeasurementReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.google.android.gms.measurement.UPLOAD" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.google.android.gms.measurement.AppMeasurementService"
            android:enabled="true"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>