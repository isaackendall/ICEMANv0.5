<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.breadcrumbs.client"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
         The following two permissions are not required to use
	     Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Access the camera -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature android:name="android.hardware.camera" />

    <!-- Access storage capabilities -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Ensure that the map renders -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.breadcrumbs.client.Main"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.breadcrumbs.client.TrailManager"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.breadcrumbs.client.BaseViewModel"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.breadcrumbs.client.CrumbViewer.CommentViewer"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.breadcrumbs.client.EditTrail"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.breadcrumbs.client.TrailActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name="com.breadcrumbs.client.ProfilePageViewer" />
        <activity
            android:name="com.breadcrumbs.client.SelectedEventViewerBase"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.breadcrumbs.client.ImageViewer"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
 <!-- hide keyboard by default -->
        </activity>
        <activity android:name="com.breadcrumbs.client.Camera.CameraCapture" >
        </activity>
        <activity
            android:name="com.breadcrumbs.client.BreadCrumbsImageSelector"
            android:screenOrientation="portrait" />
        <activity android:name="com.breadcrumbs.client.CrumbViewer.CrumbsHolder" />
        <activity
            android:name="com.breadcrumbs.client.tabs.SaveEventFragment"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.breadcrumbs.client.Maps.MapViewer"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name="com.breadcrumbs.client.tabs.SaveVideoActivity" />
        <activity
            android:name="com.breadcrumbs.client.Maps.MapViewController"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.breadcrumbs.client.ProfilePicChooser"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.breadcrumbs.client.OverflowNavigationDrawer"
            android:screenOrientation="portrait" >
        </activity>

        <service android:name="com.breadcrumbs.Location.LocationService" />

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBmkUW1b2c3cXhz-Sw7cfWtK41Qz-0aaww" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>