<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:id="@+id/content_frame"
        android:orientation="vertical"
        android:background="@color/white"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_weight="10">
        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/headerPicture"
                android:layout_alignParentLeft="true"
                android:scaleType="centerCrop"
                android:src="@drawable/background2"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="30dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:background="@color/black_semi_transparent"
                android:layout_marginBottom="30dp"></RelativeLayout>
            <com.pkmmte.view.CircularImageView
                android:id="@+id/profilePicture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="20dp"
                android:src="@drawable/profile"
                android:layout_gravity="bottom"
                android:layout_marginBottom="35dp"

                app:border="true"
                app:border_color="@color/white"
                app:border_width="8dp"
                app:shadow="true" />
            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="25dp"
                android:gravity="top|left"
                android:textColor="@color/white"
                android:textSize="10pt"
                android:padding="20dp"/>
            <ImageButton
                android:id="@+id/profile_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@null"
                android:src="@drawable/ic_action_back"/>
           <!-- <ImageButton
                android:id="@+id/select_background_pic"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:src="@drawable/ic_landscape_white_24dp"/>
            ImageButton
                android:id="@+id/select_profile_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:background="@null"
                android:src="@drawable/ic_action_person"/> -->
            <com.getbase.floatingactionbutton.FloatingActionsMenu
                android:id="@+id/set_photo_options"
                android:layout_marginBottom="-10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                fab:fab_icon="@drawable/ic_action_person_dark"
                fab:fab_addButtonColorNormal="@color/accent"
                fab:fab_addButtonColorPressed="@color/home_pressed"
                fab:fab_addButtonSize="normal"
                fab:fab_labelsPosition="left"
                android:layout_gravity="right|bottom">
                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/set_header_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_icon="@drawable/ic_landscape_white_24dp"
                    fab:fab_colorNormal="@color/accent"
                    fab:fab_size="mini"
                    fab:fab_title="Poster"
                    fab:fab_colorPressed="@color/white_pressed"/>
                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/set_profile_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_colorNormal="@color/accent"
                    fab:fab_title="Profile"
                    fab:fab_icon="@drawable/ic_action_person"
                    fab:fab_size="mini"
                    fab:fab_colorPressed="@color/white_pressed"/>

            </com.getbase.floatingactionbutton.FloatingActionsMenu>
            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_friend"
                android:tag="0"
                android:visibility="gone"
                android:layout_marginBottom="-10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                fab:fab_icon="@drawable/ic_action_new"
                fab:fab_colorNormal="@color/accent"
                android:layout_gravity="right|bottom"/>
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="-40dp"
            android:layout_weight="3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12pt"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:text="About" />
            <View
                android:layout_width="300dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="100dp"
                android:layout_height="1dp"
                android:background="@color/primary_text_default_material_light"/>

            <EditText
                android:id="@+id/about_me"
                android:textColor="@color/half_black"
                android:layout_width="match_parent"
                android:textSize="8pt"
                android:padding="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="120dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, amet enim egestas sodales. Nullam id rhoncus est libero, sit amet efficitur odio nulla at ligula. Nam et consequat nibh. Mauris "/>

