<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_material_light"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/StoryBoardHeader"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:background="@color/home"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/backAddScreen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/ic_action_back" />

        <TextView
            android:layout_marginTop="11dp"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.01"
            android:text="Add Item"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />

        <Spinner android:id="@+id/spinner"
            android:layout_width="300px"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:drawSelectorOnTop="true"/>
        <!--
            <ImageButton
                android:id="@+id/TrailSettings"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:src="@drawable/ic_action_expand" />
                -->
    </LinearLayout>
    <!-- Layout for CRUMBS -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:hint="bitches n hoes"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <VideoView
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/doneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_action_accept"
            android:layout_gravity="left|bottom"
        android:layout_marginBottom="16dp"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            fab:fab_icon="@drawable/ic_action_cancel_light"
            fab:fab_colorNormal="@color/red"
            fab:fab_colorPressed="@color/red_pressed"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="16dp"/>
    </FrameLayout>
</LinearLayout>

