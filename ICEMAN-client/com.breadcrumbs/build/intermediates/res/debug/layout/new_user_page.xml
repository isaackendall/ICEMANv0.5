<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/moonlandsmall"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome to Breadcrumbs"
        android:textSize="26sp"
        android:textColor="#FFFFFF"
        android:background="@null"
        android:id="@+id/textView3"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/firstNameInputHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/accent"
        android:layout_alignRight="@+id/signUpButton"
        android:layout_alignEnd="@+id/signUpButton"
        android:layout_marginTop="70dp"
        app:hintTextAppearance="@style/CodeFont2"
        android:layout_below="@+id/textView3">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="40px"
        android:id="@+id/firstNameInput"
        android:imeOptions="actionNext"
        android:textColor="@color/white"
        android:textColorHint="#C0C0C0"
        android:hint="Choose a user name"
        android:paddingLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/PassCodeInputHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/CodeFont2"
        android:layout_below="@+id/firstNameInputHolder"
        android:layout_alignLeft="@+id/firstNameInputHolder"
        android:layout_alignStart="@+id/firstNameInputHolder"
        android:layout_alignRight="@+id/firstNameInputHolder"
        android:layout_alignEnd="@+id/firstNameInputHolder">
    <android.support.v7.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:inputType="numberPassword"
        android:paddingLeft="10dp"
        android:textColorHighlight="@color/accent"
        android:textColorHint="@color/accent"
        android:hint="Pin"
        android:id="@+id/passCode"
        android:imeOptions="actionDone"
        />
    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/signUpButton"
        android:src="@drawable/ic_action_accept"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginRight="40dp"
        android:id="@+id/proceedNoLogin"
        android:src="@drawable/ic_action_forward"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/signUpButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Skip Login"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/textView7"
        android:layout_toLeftOf="@+id/proceedNoLogin"
        android:layout_alignBottom="@+id/proceedNoLogin"
        android:layout_alignTop="@+id/proceedNoLogin"
        android:layout_alignLeft="@+id/welcomeScreenIcon"
        android:layout_alignStart="@+id/welcomeScreenIcon" />


</RelativeLayout>
