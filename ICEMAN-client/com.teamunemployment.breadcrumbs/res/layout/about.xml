<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/header_settings"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/ColorPrimary">
    </FrameLayout>
    <ImageButton
        android:id="@+id/backButtonAbout"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:padding="8dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_action_back" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:text="About"
        style="@style/CodeFont"
        android:padding="8dp"
        android:textSize="12pt"
        android:layout_marginLeft="50dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/founders_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:textSize="20sp"
        android:text="Founders"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/founders_header"
        android:text="Josiah Kendall"/>
    <TextView

        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/founders_header"
        android:text="Kurt Schmidt"/>
    <TextView
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/founders_header"
        android:text="&#169; Copyright 2016"/>
</RelativeLayout>