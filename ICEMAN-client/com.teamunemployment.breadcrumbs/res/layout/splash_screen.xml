<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/bread_splash_screen"
        android:text="Bread"
        android:layout_marginLeft="60dp"
        android:textSize="42sp"
        android:layout_marginTop="100dp"
        android:textColor="@color/ColorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/crumbs_splash_screen"
        android:layout_toRightOf="@id/bread_splash_screen"
        android:textSize="42sp"
        android:layout_marginTop="100dp"
        android:textColor="@color/accent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crumbs"/>
    <TextView
        android:id="@+id/splash_quote"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="16sp"
        android:layout_centerInParent="true"
        android:text="Do not go where the path may lead, go instead where there is no path and leave a trail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ralph_waldo"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_quote"
        android:layout_alignLeft="@id/splash_quote"
        android:text="- Ralph Waldo Emerson"/>
    <ProgressBar
        android:id="@+id/spinner"
        android:layout_centerInParent="true"
        android:layout_margin="80dp"
        android:layout_below="@id/ralph_waldo"
        android:layout_width="50dp"
        android:layout_height="50dp" />
</RelativeLayout>