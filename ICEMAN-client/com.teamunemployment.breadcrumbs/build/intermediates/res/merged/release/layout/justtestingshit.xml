<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="50dp"
    android:paddingTop="10dp">
    <TextView
        android:id="@+id/map_overlay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:text="Baretta, Auckland Central"/>
    <TextView
        android:id="@+id/map_overlay_description"
        android:layout_width="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/map_overlay_title"
        android:text="This is a short description"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/map_overlay_devider"
        android:layout_below="@+id/map_overlay_description"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:alpha="0.45"
        android:background="@color/my_divider"
        android:layout_height="1dp"></View>
    <TextView
        android:id="@+id/map_overlay_content_count"
        android:layout_below="@id/map_overlay_devider"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/ColorPrimary"
        android:layout_height="wrap_content"
        android:text="12 photos, 3 videos"/>
    <TextView
        android:id="@+id/map_overlay_view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW"
        android:layout_marginRight="20dp"
        android:textColor="@color/ColorPrimary"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/map_overlay_devider"
        android:textSize="16sp" />

</RelativeLayout>