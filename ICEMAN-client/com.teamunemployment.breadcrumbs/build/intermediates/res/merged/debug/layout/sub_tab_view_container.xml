<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- I use a custom nonSwipable view pager because I dont want spiping in the sub tabs -->
    <com.breadcrumbs.Framework.NonSwipeableViewPager
        android:id="@+id/subscription_tabs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_material_light">

        <android.support.v4.view.PagerTabStrip
            android:id="@+id/pager_tab_strip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="#0099CC"
            android:textColor="#fff"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"></android.support.v4.view.PagerTabStrip>
    </com.breadcrumbs.Framework.NonSwipeableViewPager>

</LinearLayout>
