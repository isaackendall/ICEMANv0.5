<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <View
        android:id="@+id/blank_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null">
    </View>
    <RelativeLayout
        android:id="@+id/overlay_header_section"
        android:layout_width="match_parent"
        android:layout_height="130sp"
        android:layout_below="@+id/blank_header"
        android:background="@color/ColorPrimary">
        <TextView
            android:id="@+id/username_map_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USERNAME"
            android:textColor="@color/white_pressed"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"/>
        <TextView
            android:id="@+id/trail_name_map_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_map_overlay"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:text="Trail Name Goes Here"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/details_panel_map_overlay"
        android:layout_below="@+id/overlay_header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/description_image_overlay"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_edit"/>
        <TextView
            android:id="@+id/about_trail_overlay"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/description_image_overlay"
            android:text="Lorem ipsum dolor sit amet, sapien etiam, nunc amet dolor ac odio mauris justo. Luctus arcu, urna praesent at id quisque ac. Arcu es massa vestibulum malesuada, integer vivamus elit eu mauris eus, cum eros quis aliquam wisi. Nulla wisi laoreet suspendisse integer vivamus elit eu mauris hendrerit facilisi, mi mattis pariatur aliquam pharetra eget."/>
        <TextView
            android:id="@+id/details_map_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DETAILS"
            android:layout_below="@+id/about_trail_overlay"
            android:layout_toRightOf="@+id/description_image_overlay"
            android:layout_marginTop="20dp"/>


    </RelativeLayout>

</RelativeLayout>