<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- Layout for CRUMBS -->
    <View
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/ColorPrimary">

    </View>

    <ImageView
        android:id="@+id/media"
        android:layout_width="match_parent"
        android:layout_below="@+id/header"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/backAddScreen"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_action_back" />

    <com.getbase.floatingactionbutton.FloatingActionButton

        android:layout_below="@+id/media"
        android:layout_marginTop="-35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        fab:fab_icon="@drawable/ic_action_camera"
        fab:fab_colorNormal="@color/accent"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/details_crumb_header"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginLeft="50dp"
        android:text="Caption &amp; Upload"/>


    <EditText
        android:id="@+id/crumb_description"
        android:layout_marginTop="20dp"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:textColor="@color/ColorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/preview_crumb"
        android:textColor="@color/ColorPrimary"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PREVIEW"
        android:layout_toLeftOf="@+id/save_draft"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:textSize="18sp"/>






</RelativeLayout>

