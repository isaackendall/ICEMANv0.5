<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.teamunemployment.breadcrumbs.client.CameraController
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
    android:layout_height="match_parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/backButtonCapture"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        app:fabSize="mini"
        android:src="@drawable/ic_action_back"
        app:backgroundTint="#20000000"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/captureButton"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_videocam_white_24dp"
        app:fabSize="normal"
        app:backgroundTint="#2196F3"
        android:background="@color/white"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/videoButton"
        android:layout_above="@id/captureButton"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_action_switch_video"
        app:backgroundTint="#20000000"
        app:fabSize="mini"
        android:layout_marginRight="20px"
        android:layout_marginBottom="40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/font_or_back_camera"
        android:layout_above="@id/videoButton"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_action_switch_camera"
        app:backgroundTint="#20000000"
        app:fabSize="mini"
        android:layout_marginRight="20px"
        android:layout_marginBottom="40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:id="@+id/video_progress"
        android:layout_width="match_parent"
        android:progress="0"
        android:padding="0dp"
        android:layout_marginTop="-6dp"
        android:progressBackgroundTint="#00000000"
        android:max="15000"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal" />
    </RelativeLayout>
</LinearLayout>