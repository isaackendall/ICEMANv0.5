<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/breadcrumbs_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:gravity="center"
        android:text="BreadCrumbs"
        android:textColor="@color/white"
        android:textSize="38sp" />

    <EditText
        android:id="@+id/userNameLogin"
        style="@style/CodeFontWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/breadcrumbs_header"
        android:layout_marginTop="5dp"
        android:hint="Username"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/password"
        style="@style/CodeFontWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/userNameLogin"
        android:layout_marginTop="15dp"
        android:hint="Pin"
        android:imeOptions="actionDone"
        android:inputType="numberPassword"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginTop="30dp"
        android:background="@drawable/square"
        android:gravity="center"
        android:padding="10dp"
        android:text="Log in"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/password_forgotten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_button"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Forgot your password?"
        android:textColor="@color/white_pressed" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/password_forgotten"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@+id/or"
        android:background="@color/white"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/password_forgotten"
        android:layout_marginTop="22dp"
        android:layout_toRightOf="@+id/or"
        android:background="@color/white"></View>

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_forgotten"

        android:layout_centerHorizontal="true"
        android:layout_margin="14dp"
        android:gravity="center"
        android:text="OR"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/facebook_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/or"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:background="#3b5998"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Log in with Facebook"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/create_an_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="Dont have an account? Sign up"
        android:textColor="@color/white_pressed" />

    <ImageButton
        android:id="@+id/signUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:padding="8dp"
        android:src="@drawable/ic_action_forward"
        android:visibility="gone" />

</RelativeLayout>
