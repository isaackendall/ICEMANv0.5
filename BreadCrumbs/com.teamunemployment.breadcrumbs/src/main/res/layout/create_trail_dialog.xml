<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/message"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        style="@style/CodeFont"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/my_secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Creating a trail allows you to add videos, photos, and track your location. You can name, edit and publish this trail later. Trails are not visible to anyone else until they have been published."
        android:layout_gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/create_dialog"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:textColor="@color/ColorPrimary"
            android:text="CREATE"
            android:layout_margin="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/cancel_dialog"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:text="CANCEL"
            android:layout_margin="24dp"
            android:layout_toLeftOf="@id/create_dialog"/>
    </RelativeLayout>
</LinearLayout>