<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsable_toolbar_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/white"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|enterAlwaysCollapsed">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/headerPicture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:layout_collapseMode="parallax"
                    android:scaleType="centerCrop" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle_play_button"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <View
                    android:id="@+id/profile_prompt_base_layer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@color/my_secondary_text"
                    android:alpha="0.70"/>
                <TextView
                    android:id="@+id/cover_photo_prompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    style="@style/CodeFontWhite"
                    android:text="@string/tap_to_select_a_cover_photo"
                    android:textSize="16sp" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:background="@color/my_divider"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"/>
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:id="@+id/content_wrapper"
            android:paddingTop="12dp"
            android:layout_below="@+id/app_bar_layout_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/details_header"
                android:text="Details"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/album_title"
                android:textSize="24sp"
                android:text="Title"
                android:layout_below="@+id/details_header"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:hint="Title"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/settings_header"
                android:layout_below="@+id/album_title"
                android:text="Settings"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/public_switch"
                android:text="Public"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:layout_below="@+id/settings_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/publish_button"
            android:background="@color/ColorPrimary"
            android:text="Publish"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/album_edit_fab"
        android:layout_width="wrap_content"
        app:backgroundTint="@color/white"
        android:src="@drawable/ic_file_image_black_24dp"
        android:layout_height="wrap_content"
        app:layout_anchor="@+id/app_bar_layout_profile"
        android:layout_marginRight="20dp"
        app:layout_anchorGravity="bottom|right|end"/>
</android.support.design.widget.CoordinatorLayout>